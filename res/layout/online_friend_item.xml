<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="#fffafaf7"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout android:layout_width="20dip"
		android:layout_height="20dip" android:layout_marginLeft="10dip"
		android:layout_gravity="center_vertical" android:gravity="center"
		android:background="@drawable/online_frined_number">
		<TextView android:id="@+id/online_frined_number"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="100" android:textSize="10sp" android:textStyle="bold"
			android:textColor="#ffffffff" android:gravity="center" />
	</LinearLayout>

	<ImageView android:id="@+id/online_frined_head_portrait"
		android:layout_width="40dip" android:layout_height="40dip"
		android:layout_centerVertical="true" android:scaleType="centerInside"
		android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp" android:src="@drawable/online_frined_head_portrait"
		android:layout_gravity="center_vertical" />

	<TextView android:id="@+id/online_frined_name"
		android:layout_width="110dip" android:layout_height="wrap_content"
		android:layout_marginLeft="20dp" android:text="zhl2007"
		android:textSize="20sp" android:textColor="#ffff9933" android:gravity="left"
		android:layout_gravity="center_vertical" />

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="10dip"
		android:layout_marginTop="5dp" android:layout_gravity="center_vertical"
		android:gravity="center" android:orientation="vertical">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/online_friend_message_text"
			android:textSize="12sp" android:textColor="#ff000000"
			android:gravity="center" android:layout_gravity="center_horizontal" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="20dip" android:layout_centerVertical="true"
			android:scaleType="centerInside" android:src="@drawable/online_friend_mesage"
			android:layout_gravity="center_horizontal" />
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="5dp"
		android:layout_gravity="center_vertical" android:gravity="center"
		android:orientation="vertical">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/online_friend_mail_text"
			android:textSize="12sp" android:textColor="#ff000000"
			android:gravity="center" android:layout_gravity="center_horizontal" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="20dip" android:layout_centerVertical="true"
			android:scaleType="centerInside" android:src="@drawable/online_friend_mail"
			android:layout_gravity="center_horizontal" />
	</LinearLayout>

</LinearLayout>
